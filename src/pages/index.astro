---
import Layout from "@layout/Layout.astro";
import Home from "@components/home/home";
import 'primereact/resources/themes/lara-light-blue/theme.css' // o cualquier otro tema
import 'primereact/resources/primereact.min.css'
---

<Layout title="Inicio">
  <Home client:only="react" />
  <section class="agenda-section container">
                        <h2 class="section-title">Agenda Municipal</h2>
                        <div class="row">
                            <!-- Ejemplo de Evento 1 -->
                            <div class="col-md-4 col-sm-6">
                                <div class="agenda-item card-custom">
                                    <div class="agenda-item__date-wrapper">
                                        <span class="agenda-item__date-day">25</span>
                                        <span class="agenda-item__date-month">ABR</span>
                                    </div>
                                    <div class="agenda-item__content">
                                        <h3 class="agenda-item__title">Festival de la Ciudad</h3>
                                        <p class="agenda-item__description">Celebración anual con música en vivo, puestos de comida y actividades culturales para toda la familia.</p>
                                        <p class="agenda-item__meta"><i class="fa fa-clock-o"></i> 18:00 - 23:00 hs</p>
                                        <p class="agenda-item__meta"><i class="fa fa-map-marker"></i> Plaza 25 de Mayo</p>
                                        <a href="#" class="agenda-item__link">Más Información <i class="fa fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- Ejemplo de Evento 2 -->
                            <div class="col-md-4 col-sm-6">
                                <div class="agenda-item card-custom">
                                    <div class="agenda-item__date-wrapper">
                                        <span class="agenda-item__date-day">02</span>
                                        <span class="agenda-item__date-month">MAY</span>
                                    </div>
                                    <div class="agenda-item__content">
                                        <h3 class="agenda-item__title">Taller de Reciclaje Creativo</h3>
                                        <p class="agenda-item__description">Aprende a transformar residuos en objetos útiles y decorativos. ¡Inscripciones abiertas!</p>
                                        <p class="agenda-item__meta"><i class="fa fa-clock-o"></i> 10:00 - 12:00 hs</p>
                                        <p class="agenda-item__meta"><i class="fa fa-map-marker"></i> Centro Cultural Municipal</p>
                                        <a href="#" class="agenda-item__link">Inscribirse <i class="fa fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- Ejemplo de Evento 3 -->
                            <div class="col-md-4 col-sm-6">
                                <div class="agenda-item card-custom">
                                    <div class="agenda-item__date-wrapper">
                                        <span class="agenda-item__date-day">15</span>
                                        <span class="agenda-item__date-month">MAY</span>
                                    </div>
                                    <div class="agenda-item__content">
                                        <h3 class="agenda-item__title">Campaña de Vacunación Antirrábica</h3>
                                        <p class="agenda-item__description">Trae a tu mascota para su vacunación anual gratuita. Protege a tu familia y comunidad.</p>
                                        <p class="agenda-item__meta"><i class="fa fa-clock-o"></i> 09:00 - 13:00 hs</p>
                                        <p class="agenda-item__meta"><i class="fa fa-map-marker"></i> Diferentes puntos en barrios (consultar) </p>
                                        <a href="#" class="agenda-item__link">Ver Puntos <i class="fa fa-arrow-right"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="/agenda-completa" class="btn btn-primary">Ver Agenda Completa</a>
                        </div>
                    </section>
</Layout>
