---
// Ruta: /src/pages/secretaria/[id].astro
import secretarias from '../../../data/secretarias.json';
import Layout from '../../layout/Layout.astro';
import PerfilPage from '../perfiles/gabineteymodernizacion/perfil';

const id = Astro.params.id;
const secretaria = secretarias.find((item) => item.id === parseInt(id, 10));

if (!secretaria) {
    throw new Error(`No se encontró la secretaría con ID: ${id}`);
}
---

<Layout title={`Secretaría - ${secretaria.nombre}`}>
    <PerfilPage
        client:only="react"
        perfiles={secretaria.perfiles}
    />
</Layout>
