---
import Layout from "@layout/Layout.astro";
import SocialEmbeds from "@components/home/SocialEmbeds.jsx";
import { catamarcaApi } from "@api/catamarcaApi";

async function getDatos() {
  const response = await catamarcaApi.get("items/seccion");
  return response.data.data[0];
}

const datos = await getDatos();
---

<Layout>
  <section class="jumbotron video-banner">
    <video autoplay muted loop playsinline class="bg-video">
      <source src="/Nodo.mp4" type="video/mp4" />
      Tu navegador no soporta el video en HTML5.
    </video>

    <div class="jumbotron_body">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
            <h1>{datos.nombre}</h1>
            <p>
              {datos.descripcion}
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="overlay"></div>
  </section>

  <div class="container">
    <h1 class="text-center">Sobre Nosotros</h1>
    <div class="landing-card">
      <em class="landing-card__desc">
        {datos.sobre_nosotros}
      </em>
    </div>
    <a href="/contacto" class="landing-card__btn">Visita Nuestra Pagina</a>
  </div>

<section id="contacto" class="seccion-contacto">
  <div class="contenedor-contacto">
    <h2 class="titulo-contacto colorPrincipalTexto reveal-title">Contacto</h2>

    <div class="contacto-flex">
      <!-- Información de contacto -->
      <div class="info-contacto reveal-left">
        <div class="info-caja">
          <h3 class="info-titulo">Información de Contacto</h3>
          <div class="info-items">
            <div class="item-contacto">
              <div>
                <h4 class="subtitulo-contacto">Dirección</h4>
                <p>{datos.direccion}</p>
              </div>
            </div>
            <div class="item-contacto">
              <div>
                <h4 class="subtitulo-contacto">Teléfono</h4>
                <p>{datos.telefono}</p>
              </div>
            </div>
            <div class="item-contacto">
              <div>
                <h4 class="subtitulo-contacto">Email</h4>
                <p>{datos.email}</p>
              </div>
            </div>
            <div class="item-contacto">
              <div>
                <h4 class="subtitulo-contacto">Horario de Atención</h4>
                <p>{datos.horario}</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mapa -->
      <div class="mapa-contacto reveal-up">
        <div class="contenedor-mapa">
          <iframe
            class="iframe-mapa"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3507.6900244362223!2d-65.78420912363062!3d-28.458759159571102!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x942429dd5d935a0f%3A0xa9fd4f8fa44375e!2sPunto%20Joven!5e0!3m2!1ses!2sar!4v1747774610491!5m2!1ses!2sar"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
    </div>
  </div>
</section>

  <SocialEmbeds client:only="react" />
</Layout>
